<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2lsan.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="App Semana 3 Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="user" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="pass" IsPassword="True" Placeholder="Ingrese la contraseña"/>
        <Button x:Name="btnlogin" Text="Login" Clicked="btnlogin_Clicked"/>
        
    </StackLayout>

</ContentPage>
